                    <descriptors>
                        <descriptor>src/main/assembly/zip.xml</descriptor>
                    </descriptors>
                </configuration>

                <executions>
                    <execution>
                        <id>zip-assembly</id>
                        <phase>package</phase>

                        <goals>
