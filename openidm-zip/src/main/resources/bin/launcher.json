{
    "bundle":{
        "containers":[
            {
                "location":"bundle",
                "includes":[
                    "**/org.apache.aries.spifly.*.jar",
                    "**/slf4j-*.jar",
                    "**/osgi-over-slf4j-*"
                ],
                "start-level":1,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-system-*.jar",
                    "**/org.apache.felix.log-*.jar"
                ],
                "start-level":2,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-quartz-fragment-*.jar",
                    "**/openidm-config-*.jar",
                    "**/wrenidm-jetty-config-*.jar"
                ],
                "start-level":3,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-repo-jdbc-*.jar",
                    "**/org.apache.felix.scr-*.jar"
                ],
                "start-level":4,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/org.apache.felix.configadmin-*.jar",
                    "**/org.apache.felix.fileinstall-*.jar"
                ],
                "start-level":5,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-cluster-*.jar",
                    "**/groovy-*.jar"
                ],
                "start-level":9,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":["*.jar"],
                "excludes":[
                    "**/org.apache.aries.dynamic.*.jar",
                    "**/slf4j-*.jar",
                    "**/osgi-over-slf4j-*",
                    "**/openidm-system-*.jar",
                    "**/org.apache.felix.log-*.jar",
                    "**/openidm-quartz-fragment-*.jar",
                    "**/openidm-config-*.jar",
                    "**/wrenidm-jetty-config-*.jar",
                    "**/openidm-repo-jdbc-*.jar",
                    "**/org.apache.felix.scr-*.jar",
                    "**/org.apache.felix.configadmin-*.jar",
                    "**/org.apache.felix.fileinstall-*.jar",
                    "**/org.apache.felix.http.jetty12*.jar",
                    "**/openidm-scheduler-*.jar"
                ]
            },
            {
                "location":"bundle",
                "includes":[
                    "**/org.apache.felix.http.jetty12*.jar"
                ],
                "start-level":11,
                "action":"install.start"
            },
            {
                "location":"bundle",
                "includes":[
                    "**/openidm-scheduler-*.jar"
                ],
                "start-level":12,
                "action":"install.start"
            }
        ],
        "default":{
            "start-level":10,
            "action":"install.start"
        }
    },
    "config.properties":"conf/config.properties",
    "system.properties":"conf/system.properties",
    "boot.properties":{}
}
